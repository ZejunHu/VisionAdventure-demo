<header class="masthead" style="background-image: url('/images/blog/background.jpg')">
	<div class="overlay"></div>
	<div class="container">
		<div class="row">
			<div class="col-lg-8 col-md-10 mx-auto">
				<div class="page-heading">
					<h1 class="my-5">点滴记忆</h1>
					<!-- <span class="subheading">Getting to know the latest information</span> -->
				</div>
			</div>
		</div>
	</div>
</header>

<div class="container">
	<div class="row">
		<div class="col-sm-12 col-md-10 offset-md-1">
			<div class="">
				{{# each data.posts.results}}
				<div data-ks-editable="{{#if ../user}}{{adminEditableUrl ../../user _id}}{{/if}}" class="my-5">
					<h2><a href="{{postUrl slug}}">{{{title}}}</a></h2>
					<!-- <p class="lead text-muted">{{{categoryList categories prefix="Posted in "}}}
							{{#if author.name.first}}by {{author.name.first}}{{/if}}
					</p> -->
					<div class="row">
						{{#if image}}
						<div class="col-md-8">
							<p>{{{content.brief}}}</p>
						</div>
						<div class="col-md-4">
							<img src="{{{cloudinaryUrl image}}}" class="img-fluid my-4">
						</div>
						{{else}}
						<div class="col-md-12">
							<p>{{{content.brief}}}</p>
						</div>
						{{/if}}
					</div>
					<!-- {{#if image}}<img src="{{{cloudinaryUrl image}}}" class="img-fluid">{{/if}} -->
					{{#if content.extended}}<a href="{{postUrl slug}}" class="btn btn-primary">展开阅读</a>{{/if}}
				</div>
				{{/each}}
			</div>
		</div>
